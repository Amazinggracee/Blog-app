<div class="users_container">
  <ul>
    <% @users.each do |user| %>
      <li class="user-list-item">
        <div class="user-photo">
          <% if user.photo.present? %>
            <%= image_tag user.photo %>
          <% else %>
            <!-- Display a placeholder image or message -->
          <% end %>
        </div>
        <div class="user-info">
          <% if user.name.present? %>
            <%= link_to user_path(user), class: 'user-link' do %>
              <p class="user-name">
                <%= user.name %>
              </p>
              <% if user.posts_counter.present? %>
                <h4>Number of posts: <%= user.posts_counter %></h4>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
